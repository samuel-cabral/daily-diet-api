{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/use-cases/*": ["src/use-cases/*"],
      "@/http/*": ["src/http/*"],
      "@/env/*": ["src/env/*"],
      "@/lib/*": ["src/lib/*"]
    },
    "outDir": "build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 